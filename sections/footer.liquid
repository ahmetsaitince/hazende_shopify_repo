
<footer data-section-id="{{ section.id }}" data-section-type="header-section" class="site-footer clearfix">
  {% include 'footer-1' %}
</footer>

   
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Layout"
    },
	
	{
      "type": "header",
      "content": "Footer Newleter"
    },
	{
      "type": "checkbox",
      "id": "footer_newleter_enable",
      "label": "Enable Newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_title_4",
      "label": "Title Newsletter",
      "default": "SIGN UP FOR OUR NEWSLETTER"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Descrip Newsletter",
	  "default":"Get our updates on new arrivals and discount"
    },
	{
      "type": "header",
      "content": "Footer Center Setting"
    },
	{
      "type": "checkbox",
      "id": "footer_center_enable",
      "label": "Enable Footer Center?",
      "default": true
    },
	{
      "type": "color",
      "id": "bg_headercenter",
      "label": "BG Header Center",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Footer Center Column 1"
    },
    {
      "type": "checkbox",
      "id": "footer_co1_enable",
      "label": "Enable",
      "default": true
    },
	
	
	{
      "type": "checkbox",
      "id": "footer_show_logo",
      "label": "Enable ?",
      "default": true
    },
	{
      "type": "image_picker",
      "id": "img_logo_ft",
      "label": "Img Logo Footer"
    },
	{
      "type": "url",
      "id": "link_logo",
      "label": "Link Img Logo Footer",
      "info": "link Img Logo Footer"
    },
	 {
      "type": "textarea",
      "id": "footer_dec",
      "label": "Decription",
      "placeholder": "Decription"
    },
     {
      "type": "text",
      "id": "footer_contact_email",
      "label": "Email",
      "placeholder": "Email"
    },
	
    {
      "type": "text",
      "id": "footer_contact_phone",
      "label": "Phone",
      "placeholder": "Phone"
    },
  
    {
      "type": "header",
      "content": "Footer Center Column 2"
    },
    {
      "type": "checkbox",
      "id": "footer_co2_enable",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_title_2",
      "label": "Column 2 Title",
      "default": "your links"
    },

    {
      "type": "link_list",
      "id": "footer_linklist_2",
      "label": "Footer Column 2"
    },
    {
      "type": "header",
      "content": "Footer Center Column 3"
    },
    {
      "type": "checkbox",
      "id": "footer_co3_enable",
      "label": "Enable ?",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_title_3",
      "label": "Column 3 Title",
      "default": "your links"
    },
    {
      "type": "link_list",
      "id": "footer_linklist_3",
      "label": "Footer Column 3"
    },
	

	{
      "type": "header",
      "content": "Footer Bottom Setting"
    },
    {
      "type": "checkbox",
      "id": "show_bottom",
      "label": "Enable Footer Bottom?",
      "default": false
    },
	{
      "type": "header",
      "content": "Footer CopyRight"
    },
	{
      "type": "color",
      "id": "bg_headerbottom",
      "label": "BG Header Bottom",
      "default": "#232f3e"
    },
    {
      "type": "textarea",
      "id": "footer_about",
      "label": "Footer About"
    }
	
	
  ]
}
{% endschema %}

