{% if section.settings.status %}
	{{ '//code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css' | stylesheet_tag }}
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
	<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js" type="text/javascript" defer="defer"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
	<div class="ss-book-wrapper">
      <div class="ss-book-inner">
         <div class="ss-book-right">
          <div class="banners">
            <div class="image">
            <a  class="img1" href="{{ section.settings.link }}" title="{{ section.settings.link.alt | default: shop.name }}">
              {% if section.settings.image != blank %}
              <img class="img-responsive lazyload" data-sizes="auto" src="{{ "icon-loadings.svg" | asset_url }}" alt="{{ section.settings.image.alt | default: shop.name }}" data-src="{{ section.settings.image | img_url: 'master' }}" />
              {% else %}
              <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/951x600" />
              {% endif %}
            </a>
          </div>
        </div>
        </div>
        <div class="ss-book-left">
        <div class="ss-book-top">
          <div class="ss-book-img">
            {% if section.settings.book_image != blank %}
            	<img class="img-responsive" alt="{{ 'contact.form.make_reservation' | t }}" src="{{ section.settings.book_image | img_url: 'master' }}" />
            {% else %}
            	<img class="img-responsive" alt="{{ 'contact.form.make_reservation' | t }}" src="//placehold.it/270x98" />
            {% endif %}
          </div>
          <div class="ss-book-heading">
            {% if section.settings.book_heading != '' %}
            	<h2>{{ section.settings.book_heading }}</h2>
            {% else %}
            	<h2>{{ 'contact.form.make_reservation' | t }}</h2>
            {% endif %}
          </div>
          <div class="ss-book-time-open">
            {% if section.settings.book_time_open != '' %}
              <div class="time-open">
                <span>{{ 'contact.form.happy_hours' | t }}: </span><span>{{ section.settings.book_time_open }}</span>
              </div>
            {% endif %}
            
            {% if section.settings.book_phone != '' %}
              <div class="book-phone">
                <span>{{ section.settings.book_phone }}</span>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="ss-book-form">
          {% form 'contact' %}
          	{% if form.posted_successfully? %}
              <p class="note form-success">
                <i class="fa fa-check"></i>
                {{ 'contact.form.post_success' | t }}
              </p>
            {% endif %}

            {{ form.errors | default_errors }}
          	
          	<input type="hidden" id="ContactFormEmail" name="contact[email]" autocapitalize="off" value="dulv@ytcvn.com" class="{% if form.errors contains 'email' %}input--error{% endif %}">
          	<div class="book-field">
              <div class="book-people">
                <span class="book-icon"><i class="fa fa-user-plus"></i></span>
                <select name="contact[people]">
                  <option value="1">01 Person</option>
                  <option value="2">02 Person</option>
                  <option value="3">03 Person</option>
                  <option value="4">04 Person</option>
                  <option value="5" selected>05 Person</option>
                  <option value="5-10">5-10 Person</option>
                  <option value="10-20">10-20 Person</option>
                  <option value="20-30">20-30 Person</option>
                  <option value="30-40">30-40 Person</option>
                  <option value="40-50">40-50 Person</option>
                  <option value="50+">Above 50 Person</option>
                </select>
                <span class="book-select"><i class="fa fa-angle-right"></i></span>
              </div>
          	</div>
          	<div class="book-field">
              <div class="book-date">
                <span class="book-icon"><i class="fa fa-calendar"></i></span>
                <input type="text" class="date" name="contact[bookdate]" value="" />
                <span class="book-select"><i class="fa fa-angle-right"></i></span>
              </div>
          	</div>
          	<div class="book-field">
              <div class="book-time">
                <span class="book-icon"><i class="fa fa-clock-o"></i></span>
                <input type="text" class="time" name="contact[booktime]" value="" />
                <span class="book-select"><i class="fa fa-angle-right"></i></span>
              </div>
          	</div>
          	<input type="submit" class="btn" value="+ {{ 'contact.form.book_table_now' | t }}">
          {% endform %}
        </div>
        </div>
       
      </div>
	</div>


<script>
  jQuery(document).ready( function($) {
    jQuery(function() {
      jQuery(".date").datepicker({
        defaultDate: new Date(2019, 06, 10),
        dateFormat: "mm-dd-yy"
      });
      $(".date" ).datepicker("setDate", new Date(2019, 06, 10));
      
      jQuery(".time").timepicker({
        timeFormat: 'h:mm p',
        defaultTime: '7:30',
      });
    });
  });
</script>
{% endif %}


{% schema %}
  {
    "name": "SS Book",
    "settings": [
		{
            "type": "checkbox",
            "id": "status",
            "label": "Status",
            "default": true
        },
		{
            "type": "text",
            "id": "book_heading",
            "label": "Book Heading"
        },
		{
            "type": "image_picker",
            "id": "book_image",
            "label": "Book Image"
        },
		{
            "type": "text",
            "id": "book_time_open",
            "label": "Time Open"
        },
		{
            "type": "text",
            "id": "book_phone",
            "label": "Book Phone"
        },
		{
        "type": "image_picker",
        "id": "image",
        "label": "Banner image"
        },
        {
        "type": "url",
        "id": "link",
        "label": "Link",
        "info": "Image link"
        }
	],
	"presets": [
        {
          	"name": "SS Book",
          	"category": "Magentech"            
        }
    ]
  }
{% endschema %}

